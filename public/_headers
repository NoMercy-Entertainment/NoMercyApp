# Cloudflare Pages Headers Configuration
# https://developers.cloudflare.com/pages/platform/headers/

# HTML files - no caching, always fetch fresh for SW updates
/
  Cache-Control: no-cache, no-store, must-revalidate
  X-Content-Type-Options: nosniff

/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  X-Content-Type-Options: nosniff

# Service Worker - never cache, always fresh
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

/registerSW.js
  Cache-Control: no-cache, no-store, must-revalidate

# Manifest - short cache for PWA updates
/manifest.webmanifest
  Cache-Control: public, max-age=0, must-revalidate

# Hashed assets (contain content hash) - long-term cache
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Static JS libraries
/js/*
  Cache-Control: public, max-age=31536000, immutable

# CSS files
/css/*
  Cache-Control: public, max-age=31536000, immutable

# Images and icons - long cache
/img/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.ttf
  Cache-Control: public, max-age=31536000, immutable
